{
  "compilerOptions": {
    "module": "commonjs",
    "newLine": "lf",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "target": "es2018",
    "pretty": true,
    "moduleResolution": "node",
    "declaration": true,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "noImplicitAny": false,
    "noImplicitReturns": false,
    "skipLibCheck": true,
    "paths": {
      "*": ["node_modules/*", "src/types/*"]
    }
  },
  "files": ["src/api/api.ts"],
  "include": ["src/**/*"],
  "exclude": ["**/*.test.ts"]
}
